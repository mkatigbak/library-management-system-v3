@{
    ViewData["Title"] = "Dashboard";
    var username = ViewData["Username"] as string;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2>Welcome, @username!</h2>
                </div>
                <div class="card-body">
                    <p class="card-text">This is your Library Management System Dashboard.</p>
                    <p class="card-text">@TempData["Message"]</p>
                    <a href="/Book" class="btn btn-primary">Manage Books</a>
                    <a href="/Reader" class="btn btn-secondary">Manage Readers</a>
                    <a href="/Borrowing" class="btn btn-success">Manage Borrowings</a>
                </div>
            </div>
        </div>
    </div>
</div>