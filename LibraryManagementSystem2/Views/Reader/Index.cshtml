@model IEnumerable<LibraryManagementSystem2.Models.Reader>

<h1 class="mb-4">Readers</h1>
<a href="/Reader/Create" class="btn btn-primary mb-3">Add New Reader</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reader in Model)
        {
            <tr>
                <td>@reader.Id</td>
                <td>@reader.Name</td>
                <td>@reader.Email</td>
                <td>
                    <a href="/Reader/Details/@reader.Id" class="btn btn-info btn-sm">Details</a>
                    <a href="/Reader/Edit/@reader.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a href="/Reader/Delete/@reader.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
