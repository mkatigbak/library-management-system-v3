@model LibraryManagementSystem2.Models.Book

<h1 class="mb-4">Edit Book</h1>
<form method="post" class="row g-3">
    <div class="col-md-6">
        <label for="Id" class="form-label">ID</label>
        <input type="text" id="Id" name="Id" class="form-control" value="@Model.Id" readonly />
    </div>
    <div class="col-md-6">
        <label for="Title" class="form-label">Title</label>
        <input type="text" id="Title" name="Title" class="form-control" value="@Model.Title" required />
    </div>
    <div class="col-md-6">
        <label for="Author" class="form-label">Author</label>
        <input type="text" id="Author" name="Author" class="form-control" value="@Model.Author" required />
    </div>
    <div class="col-md-6">
        <label for="IsAvailable" class="form-label">Availability</label>
        <select id="IsAvailable" name="IsAvailable" class="form-select">
            <option value="true" @(Model.IsAvailable ? "selected" : "")>Available</option>
            <option value="false" @(!Model.IsAvailable ? "selected" : "")>Not Available</option>
        </select>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>
<a href="/Book" class="btn btn-secondary mt-3">Cancel</a>
