@model IEnumerable<LibraryManagementSystem2.Models.Book>

<h1 class="mb-4">Books</h1>
<a href="/Book/Create" class="btn btn-primary mb-3">Add New Book</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Author</th>
            <th>Availability</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@(book.IsAvailable ? "Available" : "Not Available")</td>
                <td>
                    <a href="/Book/Details/@book.Id" class="btn btn-info btn-sm">Details</a>
                    <a href="/Book/Edit/@book.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a href="/Book/Delete/@book.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
